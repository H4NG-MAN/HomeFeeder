<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/preview_height"
    android:orientation="vertical"
    tools:background="#10FFFFFF">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/wallpaper_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/wallpaper_dimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:paddingStart="@dimen/rl_margin"
        android:paddingEnd="@dimen/rl_margin"
        android:id="@+id/previewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</FrameLayout>